<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:adjustViewBounds="true"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:translationZ="1dp"
        android:text="Search through the movie world!" />

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Search.."
        android:paddingLeft="20dp"
        android:paddingRight="55dp"
        android:maxLines="1"
        android:background="@drawable/searchbar"
        android:translationZ="1dp"
        android:layout_marginTop="50dp"/>

    <ImageButton
        android:id="@+id/coolsearchbtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignRight="@id/search_bar"
        android:background="@android:color/transparent"
        android:src="@drawable/searchbarbtn"
        android:layout_marginTop="50dp"
        android:translationZ="2dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/mainbackground"
        android:translationZ="0dp" />

    <ImageView
        android:id="@+id/notFoundImage"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="1dp"
        android:src="@drawable/notfound"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/notFoundText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:text="Yeah... About the thing that you're looking for \n
Listen pal, we may not have it.\n
But you can contribute us, by adding it yourself!\n
Just click the button down below"
        android:visibility="invisible"
        android:textAlignment="center" />

    <Button
        android:id="@+id/coolbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:background="@drawable/coolbtnbackground"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Button that makes you cool!"
        android:visibility="invisible"
        android:textColor="@color/white" />

    <ProgressBar
        android:id="@+id/searchProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="94dp"
        android:layout_height="86dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:layout_marginBottom="354dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/blueCard"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="250dp"
        android:elevation="2dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:translationZ="1dp"
        app:cardBackgroundColor="#0244FA"
        app:cardCornerRadius="15dp">

        <TextView
            android:id="@+id/blueCardText"
            android:layout_width="102dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="The Lord of the Rings"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:translationZ="1dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/yellowCard"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="220dp"
        android:layout_marginTop="250dp"
        android:elevation="2dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:translationZ="1dp"
        app:cardBackgroundColor="#FFDF00"
        app:cardCornerRadius="15dp">

        <TextView
            android:id="@+id/yellowCardText"
            android:layout_width="102dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Harry Potter"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:translationZ="1dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/greenCard"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="106dp"
        android:elevation="2dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:translationZ="1dp"
        app:cardBackgroundColor="#11FF00"
        app:cardCornerRadius="15dp">

        <TextView
            android:id="@+id/greenCardText"
            android:layout_width="102dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Fight Club"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:translationZ="1dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/redCard"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="220dp"
        android:layout_marginTop="400dp"
        android:elevation="2dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:translationZ="1dp"
        app:cardBackgroundColor="#FD2222"
        app:cardCornerRadius="15dp">

        <TextView
            android:id="@+id/redCardText"
            android:layout_width="102dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Dune"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:translationZ="1dp" />

    </androidx.cardview.widget.CardView>


</RelativeLayout>