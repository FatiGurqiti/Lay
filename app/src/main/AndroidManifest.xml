<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fdev.lay">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcherlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fibuv2"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.fdev.lay.ui.FullScreen.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/Theme.Fibuv2.Fullscreen" />
        <activity
            android:name="com.fdev.lay.ui.FullScreen.ThumbnailFullScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_thumbnail_full_screen"
            android:theme="@style/Theme.Fibuv2.Fullscreen" />
        <activity
            android:name=".ui.movieDetails.MovieDetails"
            android:exported="false" />        <activity
            android:name=".ui.movieDetails.SavedMovieDetails"
            android:exported="false" />
        <activity
            android:name="com.fdev.lay.ui.Search.Search"
            android:exported="false" />
        <activity android:name="com.fdev.lay.ui.resetPassword.ResetPassword" />
        <activity
            android:name="com.fdev.lay.ui.FirstTime.FirstTime2"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fdev.lay.ui.main.HomePage"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fdev.lay.ui.create_account.CreateAccount"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fdev.lay.ui.forgotPassword.PasswordForgot"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fdev.lay.ui.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fdev.lay.ui.base.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>