<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainScreen.favourite_list.FavouriteListFragment">

    <ImageView
        android:id="@+id/homeBlackFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/full_black_filter"
        android:visibility="gone"
        android:translationZ="3dp"
        android:elevation="3dp"
        />

    <ProgressBar
        android:id="@+id/progressbarinMyList"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="300dp"
        android:elevation="1dp"
        android:translationZ="1dp"
        android:visibility="invisible" />

    <FrameLayout
        android:id="@+id/fragment_favourite_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:translationZ="2dp"
        android:elevation="2dp"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/mylistbackground" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:gravity="left|center"
        android:text=" \t Welcome, here's your favourite list"
        android:fontFamily="@font/plusjakartatextregular"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/afterRate"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/black"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="250dp"
        app:cardCornerRadius="15dp"
        android:visibility="invisible"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Thank you for your contribution"
            android:textAlignment="center"
            android:textSize="22dp"
            android:fontFamily="@font/plusjakartatextregular"
            android:layout_marginTop="100dp"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ratePop"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/black"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="250dp"
        app:cardCornerRadius="15dp"
        android:elevation="4dp"
        android:translationZ="4dp"
        android:visibility="invisible"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="So, what do you think?"
            android:textAlignment="center"
            android:textSize="22dp"
            android:fontFamily="@font/plusjakartatextregular"
            android:layout_marginTop="30dp"
            />

        <ImageButton
            android:id="@+id/likeButton"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="80dp"
            android:background="@android:color/transparent"
            android:src="@drawable/like" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nice"
            android:textAlignment="center"
            android:textSize="22dp"
            android:layout_marginRight="170dp"
            android:fontFamily="@font/plusjakartatextregular"
            android:layout_marginTop="200dp"
            />

        <ImageButton
            android:id="@+id/dislikeButton"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="160dp"
            android:background="@android:color/transparent"
            android:src="@drawable/dislike" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nah"
            android:textAlignment="center"
            android:textSize="22dp"
            android:layout_marginLeft="160dp"
            android:fontFamily="@font/plusjakartatextregular"
            android:layout_marginTop="200dp"
            />

    </androidx.cardview.widget.CardView>


    <ScrollView
        android:id="@+id/scrollViewofHome"
        android:layout_width="match_parent"
        android:layout_height="614dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="60dp">

        <RelativeLayout
            android:id="@+id/Scroll_Relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>