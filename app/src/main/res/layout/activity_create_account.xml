<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.lay.fibuv2.CreateAccount"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/create_account_background">

    <ProgressBar
        android:id="@+id/Hesap_olustur_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="150dp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="133dp"
        android:layout_height="104dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        app:srcCompat="@drawable/logo" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="32dp"
        android:layout_marginTop="200dp"
        >

        <LinearLayout
            android:id="@+id/email_Hesap_Olustur_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/CreateAccounUsernameInput"
                android:layout_width="322dp"
                android:layout_height="54dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/input"
                android:hint="Username"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />

            <EditText
                android:id="@+id/CreateAccountEmailInput"
                android:layout_width="322dp"
                android:layout_height="54dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/input"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />

            <EditText
                android:id="@+id/CreateAccountPasswordInput"
                android:layout_width="322dp"
                android:layout_height="54dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/input"
                android:hint="Password
"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />


            <Button
                android:id="@+id/create_acct_button"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:background="@color/purpleColor"
                android:text="Sign Up"
                android:textColor="@android:color/white"
                android:layout_marginTop="50dp"
                android:textAlignment="center"
                android:paddingEnd="20dp"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="fdevÂ©"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20dp" />



</RelativeLayout>

