<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fibuv2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcherlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fibuv2"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".FirstTime2"
            android:exported="false"
            android:label="@string/title_activity_first_time2"
            android:theme="@style/Theme.Fibuv2.NoActionBar" />
        <activity
            android:name=".ThumbnailFullScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_thumbnail_full_screen"
            android:theme="@style/Theme.Fibuv2.Fullscreen" />
        <activity
            android:name=".MovieDetails"
            android:exported="false" />
        <activity
            android:name=".Search"
            android:exported="false" />
        <activity android:name=".ResetPassword" />
        <activity
            android:name=".Admin"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainLoggedIn"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateAccount"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PasswordForgot"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>