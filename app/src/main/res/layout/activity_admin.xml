<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/interBlack"
    tools:context=".Admin"
    >



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:text="Add New Movie"
            android:textColor="#000000"
            android:textSize="11pt" />


        <EditText
            android:id="@+id/movie_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="80dp"
            android:maxLines="3"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textSize="8pt" />


        <TextView
            android:id="@+id/name_Text"
            android:layout_width="match_parent"
            android:layout_height="534dp"
            android:paddingLeft="20dp"
            android:paddingTop="100dp"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/tur_Text"
            android:layout_width="match_parent"
            android:layout_height="534dp"
            android:paddingLeft="20dp"
            android:paddingTop="160dp"
            android:text="Type"
            android:textColor="#000000"
            android:textSize="8pt" />

        <EditText
            android:id="@+id/movie_type"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="140dp"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textSize="8pt" />


        <TextView
            android:id="@+id/Yil_Text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingTop="220dp"
            android:text="Year"
            android:textColor="#000000"
            android:textSize="8pt" />

        <EditText
            android:id="@+id/movie_year"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="200dp"
            android:inputType="number"
            android:maxEms="4"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textSize="8pt" />


        <TextView
            android:id="@+id/url_Text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingTop="280dp"
            android:text="URL"
            android:textColor="#000000"
            android:textSize="8pt" />

        <EditText
            android:id="@+id/movie_url"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="260dp"
            android:inputType="text"
            android:maxEms="4"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textSize="8pt" />


        <TextView
            android:id="@+id/Content_text"
            android:layout_width="match_parent"
            android:layout_height="604dp"
            android:paddingLeft="150dp"
            android:paddingTop="380dp"
            android:text="Content"
            android:textColor="#000000"
            android:textSize="8pt" />

        <Button
            android:id="@+id/AddButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="@color/interOrange"
            android:textColor="@color/white"
            android:text="Add" />

        <MultiAutoCompleteTextView
            android:id="@+id/movie_about"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:hint="About the movie"
            android:layout_marginTop="430dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />


    </androidx.cardview.widget.CardView>





</RelativeLayout>