<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/interBlack"
    tools:context=".Admin"
    >



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:text="Add New Movie"
            android:textColor="#000000"
            android:textSize="11pt" />

        <TextView
            android:id="@+id/Ad_Text"
            android:layout_width="match_parent"
            android:layout_height="534dp"
            android:paddingLeft="20dp"
            android:paddingTop="100dp"
            android:text="Movie"
            android:textColor="#000000"
            android:textSize="8pt" />

        <EditText
            android:id="@+id/Ad_input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="80dp"
            android:maxLines="3"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textSize="8pt" />


        <TextView
            android:id="@+id/Tur_Text"
            android:layout_width="match_parent"
            android:layout_height="534dp"
            android:paddingLeft="20dp"
            android:paddingTop="160dp"
            android:text="Type"
            android:textColor="#000000"
            android:textSize="8pt" />

        <EditText
            android:id="@+id/Tur_input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="140dp"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textSize="8pt" />


        <TextView
            android:id="@+id/Yil_Text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingTop="220dp"
            android:text="Year"
            android:textColor="#000000"
            android:textSize="8pt" />

        <EditText
            android:id="@+id/Yil_input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="200dp"
            android:inputType="number"
            android:maxEms="4"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textSize="8pt" />


        <TextView
            android:id="@+id/Aciklama_Text"
            android:layout_width="match_parent"
            android:layout_height="604dp"
            android:paddingLeft="150dp"
            android:paddingTop="280dp"
            android:text="Content"
            android:textColor="#000000"
            android:textSize="8pt" />

        <EditText
            android:id="@+id/Aciklama_input"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="330dp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="20dp"
            android:fadingEdge="horizontal"
            android:hint="Enter Content"
            android:inputType="textPersonName"
            android:lines="10"
            android:textSize="8pt"

            />

        <ImageView
            android:id="@+id/Resim_Ekle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="480dp"
            android:background="@android:color/transparent"
            android:translationZ="90dp"
            app:srcCompat="@android:drawable/ic_menu_camera" />

        <ImageView
            android:id="@+id/DuvarKagidi"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="450dp" />

        <Button
            android:id="@+id/EkleButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="@color/interOrange"
            android:textColor="@color/white"
            android:text="Add" />


    </androidx.cardview.widget.CardView>





</RelativeLayout>