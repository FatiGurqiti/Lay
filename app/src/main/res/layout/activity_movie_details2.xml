<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.movieDetails.MovieDetails">

    <ImageView
        android:id="@+id/detailBlackFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/full_black_filter"
        android:visibility="invisible"
        android:translationZ="1dp"
        android:elevation="1dp"
        />

    <ProgressBar
        android:id="@+id/progressbarindetail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="300dp"
        android:elevation="1dp"
        android:translationZ="1dp"
        android:visibility="invisible" />

    <ScrollView
        android:id="@+id/scrollViewofSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true">


        <RelativeLayout
            android:id="@+id/Scroll_Relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="376dp"
                android:translationZ="1dp"
                app:srcCompat="@drawable/time" />

            <ImageView
                android:id="@+id/imageThumbnailinDetails"
                android:layout_width="match_parent"
                android:layout_height="487dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="2dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic[3]" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="487dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/black_filter"
                tools:layout_editor_absoluteY="2dp" />


            <ImageView
                android:id="@+id/RateBackground"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:src="@drawable/yellow_background"
                android:layout_alignParentRight="true"
                android:translationZ="0dp"
                android:elevation="0dp"
               />



            <ImageView
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/star" />


            <TextView
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/davidlibre_regular"
                android:text="8.7"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/firstText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageThumbnailinDetails"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="25dp"
                android:fontFamily="@font/plusjakartatextregular"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/readMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstText"
                android:layout_marginTop="30dp"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:textColor="#A9A904"
                android:fontFamily="@font/davidlibre_regular"
                android:layout_marginEnd="25dp"
                android:textSize="20dp"
                android:text="Read More..." />


            <TextView
                android:id="@+id/secondText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstText"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:fontFamily="@font/plusjakartatextregular"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/secondText"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/plusjakartatextregular"
                android:text="Something you might be intresed"
                android:textAlignment="textStart"
                android:layout_marginStart="15dp"
                android:textColor="#4B0082"
                android:textSize="16dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/morelikethisimage1"
                android:layout_width="270dp"
                android:layout_height="170dp"
                android:layout_below="@+id/products"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/morelikethisfilter"
                android:layout_width="270dp"
                android:layout_height="170dp"
                android:layout_below="@+id/products"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/black_filter" />

            <TextView
                android:id="@+id/morelikethisTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/products"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="75dp"
                android:elevation="2dp"
                android:fontFamily="@font/plusjakartatextregular"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:translationZ="2dp" />

            <ImageView
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="420dp"
                android:layout_marginEnd="20dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/save" />

            <ImageView
                android:id="@+id/saved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="420dp"
                android:layout_marginEnd="20dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/saved" />

            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageThumbnailinDetails"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="410dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="19dp"
                android:fontFamily="@font/davidlibre_regular"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:translationZ="1dp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="372dp"
                android:layout_toEndOf="@+id/imageView14"
                android:fontFamily="@font/davidlibre_regular"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="330dp"
                android:layout_toEndOf="@+id/imageView14"
                android:fontFamily="@font/davidlibre_regular"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="338dp"
                app:srcCompat="@drawable/calendar" />

            <TextView
                android:id="@+id/title"
                android:layout_width="301dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="176dp"
                android:layout_marginEnd="70dp"
                android:fontFamily="@font/davidlibre_bold"
                android:lineSpacingExtra="10dp"
                android:textColor="@color/white"
                android:textSize="30dp" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>